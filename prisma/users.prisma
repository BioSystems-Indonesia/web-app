model User {
    id     String          @id @default(uuid())
    email  String          @unique
    name   String
    roleId Int?
    role   Role?           @relation(fields: [roleId], references: [id])
    posts  Article[]
    auth   Authentication?

    deletedAt DateTime?
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
}
